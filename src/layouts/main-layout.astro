---
import Navbar from "../components/Navbar/Navbar";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Baris Ozkal's portfolio where you can find his projects, academic career and experience."
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta title={title} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <main>
      <Navbar client:visible />
      <slot>Default Text</slot>
    </main>
  </body>
</html>

<style>
  @tailwind base;
  @tailwind components;
  @tailwind utilities;
</style>
